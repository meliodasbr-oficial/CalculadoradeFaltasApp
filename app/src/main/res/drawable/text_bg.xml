<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Cor de fundo do TextView -->
    <solid android:color="#E0E0E0" /> <!-- Cinza claro, pode ser ajustado -->

    <!-- Bordas arredondadas -->
    <corners android:radius="8dp" />

    <!-- Margens internas (padding) -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />

    <!-- Borda ao redor do TextView -->
    <stroke
        android:width="2dp"
        android:color="#B0BEC5" /> <!-- Cinza para a borda -->

</shape>
